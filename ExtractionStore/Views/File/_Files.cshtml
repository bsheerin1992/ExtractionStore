@model IPagedList<ExtractionStore.Models.File>

<div id="fileList">
    @*add buttons for pagin results to the top of the view*@
    <div class="pagedList" data-exst-target="#fileList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        PagedListRenderOptions.MinimalWithItemCountText)
    </div>
    @*table headers*@
    <table class="table">
        <tr>
            <th>
                File Name
            </th>
            <th>
                File Type
            </th>
            <th>
               File Contents
            </th>
            <th>
                Username
            </th>
            <th></th>
        </tr>

        @*display the various information associated with a given file in the db and links to view their details or delete them*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FileName
                </td>
                <td>
                    @item.ContentType
                </td>
                <td>
                    @item.Content
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>